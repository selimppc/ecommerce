<?php if($errors->any()): ?>
    <script type="text/javascript">
        $(function(){
            $("#addData").modal('show');
        });
    </script>

    <a href="<?php echo e(Url::to('')); ?>" id="site_url">&nbsp;</a>
<script>
    $(function(){

        $("#type").on('change',function(e){

            var type = $("#type").val();
            var site_url = $('#site_url').attr("href");
            
            $.ajax({
                url: site_url+'/article/add_subpage_ajax',
                type: 'POST',
                dataType: 'json',
                data: {_token: '<?php echo csrf_token(); ?>',type:type,},
                success: function(response)
                {
                    $("#sub_page_id").html(response.message);
                }
            });


            return false;
        });

        

    });
</script>
<?php endif; ?>

