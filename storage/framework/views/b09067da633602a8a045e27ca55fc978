<script>
	$(function(){

		$("#paynowbutton_btn").on('click',function(e){

			$('.loading').show();
            var value = '';
            var site_url = $('#site_url').attr("href");
            $.ajax({
                url: site_url+'/order/saveorder',
                type: 'POST',
                dataType: 'json',
                data: {_token: '<?php echo csrf_token(); ?>',value:value,},
                success: function(response)
                {
                    $('#submit_payment').submit();
                }
            });

            


        });
	});

</script>

